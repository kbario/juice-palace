---
// import '@fontsource-variable/noto-sans';
import { ViewTransitions } from 'astro:transitions';
import { Header } from '../components/shared/header/header';
import '../styles/global.css';
import type { LinkConfig } from '../types/links';

const headerLinks: LinkConfig[] = [
  {
    display: 'Home',
    link: '/',
    emoji: '🏠',
  },
  {
    display: 'Menu',
    link: '/menu',
    emoji: '☕',
  },
  {
    display: 'Contact',
    link: '/contact',
    emoji: '📞',
  },
];

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang='en'
  class='bg-surface-default scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Astro description'
    />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Header
      links={headerLinks}
      client:idle
    />
    <main class='bg-grey-100 h-view flex overflow-hidden flex-col'>
      <slot />
      <!-- <MobileNav /> -->
    </main>
  </body>
</html>
